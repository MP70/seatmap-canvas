{
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "module": "esnext",
    "baseUrl": "./src",
    "removeComments": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "preserveConstEnums": true,
    "declaration": true,
    "noImplicitAny": true,
    "typeRoots": [
      "node_modules/@types",
      "dist/types.d.ts"
    ],
    "paths": {
      "@/*": ["lib/*"],
      "@model/*": ["lib/models/*"],
      "@enum/*": ["lib/enums/*"],
      "@svg/*": ["lib/svg/*"],
      "@decorator/*": ["lib/decorators/*"],
      "@style/*": ["scss/*"],

    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx"
  ]
}